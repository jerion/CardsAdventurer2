<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_enemy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/enemy1" />

                <LinearLayout
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等級：" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="血量：" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="力氣：" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/level_enemy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:id="@+id/hp_enemy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0" />

                    <TextView
                        android:id="@+id/sp_enemy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_card_enemy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡牌" />

                <Button
                    android:id="@+id/btn_graveyard_enemy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="墳場" />

            </LinearLayout>

            <TextView
                android:id="@+id/gear_enemy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="裝備" />

            <TextView
                android:id="@+id/status_enemy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="狀態" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/name_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目標名稱" />

            <TextView
                android:id="@+id/intro_target"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="目標說明" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/player" />

                <LinearLayout
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等級：" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="血量：" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="力氣：" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="113dp"
                    android:layout_height="106dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/level_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0" />

                    <TextView
                        android:id="@+id/hp_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0" />

                    <TextView
                        android:id="@+id/sp_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/0" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="卡牌" />

                <Button
                    android:id="@+id/btn_graveyard_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="墳場" />
            </LinearLayout>

            <TextView
                android:id="@+id/gear_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="裝備" />

            <TextView
                android:id="@+id/status_player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="狀態" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="敵人持有卡片數："
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/card_enemy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3" />
            </LinearLayout>

            <ListView
                android:id="@+id/card_battlefield"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ListView
                android:id="@+id/card_player"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ListView>

            <TextView
                android:id="@+id/card_num_in_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3/10" />

        </LinearLayout>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="325dp" />

            <Button
                android:id="@+id/btn_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="技能" />

            <ImageButton
                android:id="@+id/imbtn_item"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/effect1" />

            <Button
                android:id="@+id/btn_end_turn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="回合結束" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>